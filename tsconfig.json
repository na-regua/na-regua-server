{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"baseUrl": "./src",
		"paths": {
			"@api/*": ["api/*"],
			"@core/*": ["core/*"],
			"@config/*": ["config/*"],
			"@utils/*": ["utils/*"]
		}
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}