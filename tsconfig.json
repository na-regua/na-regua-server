{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@api/*": ["./src/api/*"],
			"@core/*": ["./src/core/*"],
			"@config/*": ["./src/config/*"]
		}
	}
}
